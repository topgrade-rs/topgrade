{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "includes": ["**/*.{md,json}"],
  "excludes": [
    ".git/",
    "target/",
    "node_modules/",
    "src/steps/os/os_release/**",
    "locales/**"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.7.wasm",
    "https://plugins.dprint.dev/json-0.17.4.wasm"
  ],
  "markdown": {
    "textWrap": "maintain",
    "lineWidth": 100
  }
}
